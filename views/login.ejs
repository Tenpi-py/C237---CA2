<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Login</h1>
        <% if (errors && errors.length > 0) { %> // Display errors if any
            <div class="alert alert-danger"> // Alert for errors
                <% errors.forEach(function(error) { %> // Loop through errors and display each
                    <p><%= error %></p> // Display error message
                <% }); %> // End of error loop
            </div>
        <% } %>
        <% if (messages && messages.length > 0) { %> // Display success messages if any
            <div class="alert alert-success"> // Alert for success messages
                <% messages.forEach(function(message) { %> // Loop through messages and display each
                    <p><%= message %></p> // Display success message
                <% }); %> // End of message loop
            </div>
        <% } %>
        <form action="/login" method="POST" class="mt-4">
            <div class="form-group mb-3"> 
                <label for="identifier">Username or Email:</label> 
                <input type="text" id="identifier" name="identifier" class="form-control" required> // Input for username or email
            </div>
            <div class="form-group mb-3">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required> // Input for password
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/" class="btn btn-secondary ms-2">Cancel</a>
        </form>
        <p class="mt-3 text-center">
            Don't have an account? <a href="/register">Register here</a>.
        </p>
    </div>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> 
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Register</h1>
        <% if (errors && errors.length > 0) { %> // Display errors if any
            <div class="alert alert-danger">
                <% errors.forEach(function(error) { %>
                    <p><%= error %></p> // Loop through errors and display each
                <% }); %>
            </div>
        <% } %>
        <% if (messages && messages.length > 0) { %> // Display success messages if any
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p> // Loop through messages and display each
                <% }); %>
            </div>
        <% } %>
        <form action="/register" method="POST" class="mt-4"> // Form for user registration
            <div class="form-group"> // Form group for username
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control" required 
                <% if (formData && formData.username) { %> value="<%= formData.username %>" <% } else { %> value="" <% } %>> // Pre-fill username if available
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required 
                <% if (formData && formData.email) { %> value="<%= formData.email %>" <% } else { %> value="" <% } %>> // Pre-fill email if available
            </div>
            <div class="mb-3">
                <label for="contact" class="form-label">Contact Number:</label>
                <input type="text" id="contact" name="contact" class="form-control" required value="<%= formData.contact || '' %>"> // Pre-fill contact number if available
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <div class ="form-group">
                <label for="confirm_password" class="form-label">Confirm Password:</label>
                <input type="password" id="confirm_password" name="confirm_password" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="role">Role:</label>
                <select id="role" name="role" class="form-select" required>
                    <option value="user" <% if (formData.role === 'user') { %>selected<% } %>>User</option> // Default role is 'user'
                    <option value="admin" <% if (formData.role === 'admin') { %>selected<% } %>>Admin</option> // Admin role option
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Register</button> // Submit button for registration
            <a href="/" class="btn btn-secondary">Back to Home</a>
            <a href="/login">Already have an account? Login</a> // Link to login page if user already has an account
        </form>
    </div>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Food Entry</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    .form-control:focus {
      box-shadow: 0 0 0 0.2rem rgba(13,110,253,.25);
    }
    img {
      border: 1px solid #dee2e6;
      border-radius: 8px;
    }
  </style>
</head>
<body class="bg-light">

  <div class="container py-5">
    <!-- Card container -->
    <div class="card shadow border-primary p-4 mx-auto" style="max-width: 550px;">
      <h2 class="mb-4 text-center text-primary">
        <i class="bi bi-nut-fill me-2"></i>Edit Food Entry
      </h2>

      <!-- Form shared by User and Admin -->
      <form action="<%= currentUser.role === 'admin' ? '/admin/food/' + food.id + '/edit' : '/food/' + food.id + '/edit' %>" 
            method="POST" enctype="multipart/form-data" novalidate>

        <!-- Food Name Field -->
        <div class="form-floating mb-3">
          <input type="text" name="food_name" id="food_name" class="form-control" 
                 value="<%= food.food_name %>" placeholder="Food Name" required>
          <label for="food_name"><i class="bi bi-card-text me-1"></i>Food Name</label>
        </div>

        <!-- Image Upload -->
        <div class="mb-3">
          <label for="image" class="form-label"><i class="bi bi-image-fill me-1"></i>Image</label>
          <input type="file" name="image" id="image" class="form-control" accept="image/*">
          <% if (food.image) { %>
            <div class="mt-2 text-center">
              <img src="<%= food.image %>" alt="Current Image" width="120" class="img-thumbnail">
              <p class="text-muted small mt-1">Current image</p>
            </div>
          <% } %>
        </div>

        <!-- Calories In -->
        <div class="form-floating mb-3">
          <input type="number" name="calories_in" id="calories_in" class="form-control" 
                 value="<%= food.calories_in %>" placeholder="Calories In" required>
          <label for="calories_in"><i class="bi bi-graph-up me-1"></i>Calories In</label>
        </div>

        <!-- Calories Out -->
        <div class="form-floating mb-3">
          <input type="number" name="calories_out" id="calories_out" class="form-control" 
                 value="<%= food.calories_out %>" placeholder="Calories Out" required>
          <label for="calories_out"><i class="bi bi-graph-down me-1"></i>Calories Out</label>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100">
          <i class="bi bi-check-circle me-1"></i>Update Food
        </button>
      </form>

      <!-- Back Button -->
      <a href="/food" class="btn btn-outline-secondary mt-3 w-100">
        <i class="bi bi-arrow-left me-1"></i>Back to My Food Entries
      </a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

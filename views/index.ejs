<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Diet Tracker App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <script src="https://kit.fontawesome.com/a2e0f1f9c6.js" crossorigin="anonymous"></script>
  <style>
    body {
      background: linear-gradient(to right, #e0f7fa, #f1f8ff);
    }
    .feature-card {
      background: white;
      padding: 25px;
      border-radius: 12px;
      text-align: center;
      transition: all 0.2s ease;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      text-decoration: none;
      color: inherit;
    }
    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    }
    .feature-icon {
      font-size: 2.5rem;
      color: #0288d1;
      margin-bottom: 15px;
    }
    .hero-title {
      font-weight: 700;
      color: #0277bd;
      margin-bottom: 40px;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-4">
    <div class="container">
      <a class="navbar-brand fw-bold text-white" href="/">Diet Tracker</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link text-white" href="/food">View Food Entries</a>
          </li>
          <% if (currentUser && currentUser.role === 'admin') { %>
          <li class="nav-item">
            <a class="nav-link text-warning" href="/adminDashboard">Admin Dashboard</a>
          </li>
          <% } %>
        </ul>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <% if (currentUser) { %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/login">Login</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container text-center py-5">
    <h1 class="hero-title">Welcome to Diet Tracker</h1>

    <% if (currentUser) { %>
      <%- include('userindex', { currentUser: currentUser }) %>
    <% } else { %>
      <div class="row justify-content-center g-4">
        <div class="col-md-4">
          <a href="/food" class="feature-card d-block">
            <div class="feature-icon"><i class="fas fa-utensils"></i></div>
            <h5>Track Food Intake</h5>
            <p>Log meals and monitor your calories daily.</p>
          </a>
        </div>
        <div class="col-md-4">
          <a href="/register" class="feature-card d-block">
            <div class="feature-icon"><i class="fas fa-user-plus"></i></div>
            <h5>Register & Start</h5>
            <p>Create an account to begin tracking your diet.</p>
          </a>
        </div>
        <div class="col-md-4">
          <a href="/login" class="feature-card d-block">
            <div class="feature-icon"><i class="fas fa-lock"></i></div>
            <h5>Secure Login</h5>
            <p>Access your profile and manage your entries.</p>
          </a>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>

<!-- Add Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body {
    background-color: #c5ab29;
  }

  .dashboard-card {
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .dashboard-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }
  a.text-decoration-none {
    text-decoration: none !important;
  }
</style>

<!-- Page content -->
<div class="container my-5">
  <div class="row g-4 justify-content-center">
    <!-- User Dashboard -->
    <div class="col-12 col-md-6 col-lg-5">
      <a href="/food" class="text-decoration-none">
        <div class="card dashboard-card border-primary shadow p-4 rounded-4 h-100">
          <h2 class="text-primary fw-bold mb-3">User Dashboard</h2>
          <ul class="fs-5 text-dark">
            <li class="mb-2">Add food entries and track calories</li>
            <li class="mb-2">View your food log</li>
          </ul>
        </div>
      </a>
    </div>

    <!-- Admin Dashboard -->
    <% if (currentUser && currentUser.role === 'admin') { %>
    <div class="col-12 col-md-6 col-lg-5">
      <a href="/adminDashboard" class="text-decoration-none">
        <div class="card dashboard-card border-warning shadow p-4 rounded-4 h-100">
          <h2 class="text-warning fw-bold mb-3">Admin Dashboard</h2>
          <ul class="fs-5 text-dark">
            <li class="mb-2">View and manage all user accounts</li>
            <li class="mb-2">Edit or delete any food entry</li>
          </ul>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>
